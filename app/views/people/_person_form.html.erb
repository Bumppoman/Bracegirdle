<%= form_for @person, url: request.path, html: { class: "form-horizontal" } do |f| %>
  <div class="card-body card-block">
    <div class="row form-group">
      <div class="col col-md-4"><%= f.label :name, class: "form-control-label" %></div>
      <div class="col-12 col-md-8"><%= f.text_field :name, class: "form-control" %></div>
    </div>
    <div class="row form-group">
      <div class="col col-md-4"><%= f.label :address, class: "form-control-label" %></div>
      <div class="col-12 col-md-8"><%= f.text_field :address, class: "form-control" %></div>
    </div>
    <div class="row form-group">
      <div class="col col-md-4"><%= f.label :phone_number, class: "form-control-label" %></div>
      <div class="col-12 col-md-8"><%= f.text_field :phone_number, class: "form-control" %></div>
    </div>
    <div class="row form-group">
      <div class="col col-md-4"><%= f.label :email, "Email address", class: "form-control-label" %></div>
      <div class="col-12 col-md-8"><%= f.text_field :email, class: "form-control" %></div>
    </div>
    <div class="row form-group">
      <div class="col col-md-4"><%= label_tag "position", nil, class: "form-control-label" %></div>
      <div class="col-12 col-md-8"><%= select_tag("position", options_for_select(POSITIONS.invert, @trustee.position), class: "form-control") %></div>
    </div>
  </div>
  <div class="card-footer" style="text-align: right;">
    <button type="submit" class="btn btn-success btn-sm">
      <i class="fa fa-check-circle"></i> Submit
    </button>
    <%= link_to :cemetery_trustees, class: "btn btn-danger btn-sm" do %>
      <i class="fa fa-ban"></i> Cancel
    <% end  %>
  </div>
<% end %>