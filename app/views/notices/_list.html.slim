.section-wrapper
  .table-wrapper
    table#notices-data-table.table.display.responsive.no-wrap.data-table-basic data-empty-message="There are no notices to display."
      thead
        tr
          th
          th Cemetery
          th Date Issued
          th Response Required
          th Response Received
          th Status
      tbody
        - @notices.each do |notice|
          tr
            td = link_to "#{ notice.notice_number }", notice
            td = notice.cemetery
            td = notice.created_at
            td = notice.response_required_date
            td = notice.response_received_date || 'None received'
            td = notice.formatted_status