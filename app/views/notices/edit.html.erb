<div class="col-lg-12">
  <div class="card">
    <div class="card-header">
      <strong><%= @title %></strong>
    </div>
    <%= form_for @notice, html: { class: "form-horizontal" } do |f| %>
      <div class="card-body card-block">
        <%= '<div class="alert alert-danger" role="alert">There was a problem issuing this Notice of Non-Compliance!</div>'.html_safe if @notice.errors.any? %>
        <%= render 'form', f: f %>
        <div class="form-row">
          <div class="form-group col-md-6">
            <%= f.label :response_received_date, "Response Received" %>
            <div class="input-group">
              <%= f.date_field :response_received_date, class: "form-control" %>
            </div>
          </div>
          <div class="form-group col-md-6">
            <%= f.label :follow_up_inspection_date, "Follow Up Inspection" %>
            <div class="input-group">
              <%= f.date_field :follow_up_inspection_date, class: "form-control" %>
            </div>
          </div>
        </div>
      </div>
      <div class="card-footer" style="text-align: right;">
        <button type="submit" class="btn btn-success btn-sm">
          <i class="fa fa-check-circle"></i> Submit
        </button>
        <%= link_to @notice, class: "btn btn-danger btn-sm" do %>
          <i class="fa fa-ban"></i> Cancel
        <% end  %>
      </div>
    <% end %>
    </div>
  </div>