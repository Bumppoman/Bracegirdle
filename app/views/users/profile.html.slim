- content_for :title, 'User Profile'
- content_for :breadcrumbs, breadcrumbs_helper(['User profile'])
.row.row-sm
  .col-lg-8
    .card.card-profile
      .card-body
        .media
          img src="http://via.placeholder.com/500x500" alt=""
          .media-body
            h3.card-profile-name = @user.name
            p.card-profile-position = @user.title
            p = @user.city
    ul.nav.nav-activity-profile.mg-t-20
      li.nav-item
        = link_to '#', class: 'nav-link' do
          i.icon.ion-ios-send.tx-purple
          | Send a message
      li.nav-item
        = link_to '#', class: 'nav-link' do
          i.icon.ion-ios-send.tx-purple
          | Send a message
      li.nav-item
        = link_to '#', class: 'nav-link' do
          i.icon.ion-ios-send.tx-purple
          | Send a message
    .card.card-recommendation.mg-t-20
      .card-body.pd-25
        .slim-card-title.mg-b-15 Latest Complaints
        .table-responsive
          table.table
            thead
              tr
                th Complaint
                th Cemetery
                th Last Action
            tbody
              - if @recent_complaints.empty?
                tr
                  td.pd-l-25-force colspan="3" There are no recent complaints to display.
              - else
                - @recent_complaints.each do |complaint|
                  tr
                    td = link_to complaint, complaint
                    td = complaint.formatted_cemetery + (complaint.cemetery_regulated? ? " (##{complaint.cemetery.cemetery_id})" : '')
                    td = complaint.updated_at.to_date.to_s
      .card-footer.pd-y-12.pd-x-25.bd-t.bd-gray-300
        = link_to 'View all', user_complaints_path(@user.id)
    /.card.card-latest-activity.mg-t-20
      .card-body
        <div class="slim-card-title">Latest Activity</div>
        <div class="media media-author">
          <img src="http://via.placeholder.com/500x500" alt="">
