<%= form_with model: [@crematory, Operator.new],
  local: false,
  url: crematory_operators_path(@crematory), 
  builder: BracegirdleFormBuilder do |f| 
%>
  <div 
    id="operators-form-modal" 
    class="modal fade"
    data-controller="operators--form"
    data-target="operators--index.operatorForm"
  >
    <div class="modal-dialog modal-lg w-60" role="document">
      <div class="modal-content">
        <div class="modal-header px-4">
          <h6 
            class="tx-14 mb-0 tx-uppercase tx-inverse tx-bold"
            data-target="operators--form.title"
          >Add New Operator</h6>
          <button 
            class="close" 
            type="button"
            data-bs-target="#operators-form-modal"
            data-bs-toggle="modal"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body p-4">
          <div class="container-fluid">
            <div class="row">
              <div class="col">
                <%= f.text_field :name, required: true %>
              </div>
            </div>
            <div class="row">
              <div class="col">
                <%= f.date_field :certification_date, label: 'Certification Date', required: true %>
              </div>
              <div class="col">
                <%= f.date_field :certification_expiration_date, label: 'Certification Expiration Date', required: true %>
              </div>
            </div>
            <div class="row">
              <div class="col">
                <%= f.text_area :notes, rows: 5 %>
              </div>
            </div>
          </div>
          <div class="modal-footer mt-4">
            <button 
              class="btn btn-primary"
              data-target="operators--form.submit"
            >Add New Operator</button>
            <button 
              type="button" 
              class="btn btn-secondary"
              data-bs-target="#operators-form-modal"
              data-bs-toggle="modal"
            >Cancel</button>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
