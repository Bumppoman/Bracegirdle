<div class="content mt-3">
  <div class="animated fadeIn">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <strong class="card-title"><%= @title %></strong>
          </div>
          <div class="card-body">
            <table id="complaints-data-table" class="table table-striped table-bordered">
              <thead>
              <tr>
                <th></th>
                <th>Cemetery</th>
                <th>Complainant</th>
                <th>Complaint Type</th>
                <th>Complaint Date</th>
                <th>Last Action</th>
                <th>Status</th>
              </tr>
              </thead>
              <tbody>
              <% @complaints.each do |complaint| %>
                <tr>
                  <td><%= link_to "#{ complaint.date_acknowledged.year }-#{ "%03d" % complaint.id }", complaint %></td>
                  <td><%= link_to complaint.cemetery.name, complaint.cemetery %></td>
                  <td><%= complaint.complainant_name %></td>
                  <td><%= formatted_complaint_types(complaint) %></td>
                  <td><%= complaint.date_acknowledged %></td>
                  <td><%= complaint.last_action %><br /><%= complaint.updated_at.to_date %></td>
                  <td>Status</td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div><!-- .animated -->
</div><!-- .content -->