<%= link_to (
  ['Attachment', 'Note'].include?(notification.object_type) ? notification.object.concernable : notification.object), 
  class: 'dropdown-link notification-link' + (notification.read? ? ' read' : ''), 
  data: {
    action: 'main#markNotificationRead',
    notification_id: notification.id,
    path: read_notification_path(notification),
    target: 'main.notification'
  } do
%>
  <div class="media">
    <img src="http://via.placeholder.com/500x500" alt="" />
    <div class="media-body">
      <p>
        <%= "#{notification.sender.name} #{render inline: notification.text, locals: { notification: notification }}." %>
      </p>
      <span><%= notification.created_at.strftime('%B %-d, %Y at %l:%M %P') %></span>
    </div>
  </div>
<% end %>