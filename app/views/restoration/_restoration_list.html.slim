.section-wrapper
  .table-wrapper
    table#restoration-data-table.table.display.responsive.no-wrap.data-table-basic data-empty-message="There are no applications to display."
      thead
        tr
          th
          th Cemetery
          th Submission Date
          th Status
          th Last Action
      tbody
        - @applications.each do |application|
          tr
            td = restoration_link application
            td = "#{application.cemetery} (##{application.cemetery.cemetery_id})"
            td
              span style="display: none;" = sort_date(application.submission_date)
              span = application.submission_date
            td = application.named_status
            td
              span style="display: none;" = sort_date(application.updated_at)
              span = application.current_status.created_at
  .mg-t-20
    ul.nav.nav-gray-600.nav-underline.justify-content-center
      li.nav-item
        = link_to 'Upload new application', new_restoration_path(type: params[:type]), class: 'nav-link'