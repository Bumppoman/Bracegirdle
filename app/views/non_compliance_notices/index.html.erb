<div class="content mt-3">
  <div class="animated fadeIn">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <strong class="card-title"><%= @title %></strong>
          </div>
          <div class="card-body">
            <table id="non-compliance-notices-data-table" class="table table-striped table-bordered">
              <thead>
              <tr>
                <th></th>
                <th>Cemetery</th>
                <th>Violation Date</th>
                <th>Date Issued</th>
                <th>Response Required</th>
                <th>Response Received </th>
                <th>Status</th>
              </tr>
              </thead>
              <tbody>
              <% @notices.each do |notice| %>
                <tr>
                  <td><%= link_to "#{ notice.notice_number }", notice %></td>
                  <td><%= link_to notice.cemetery.name, notice.cemetery %></td>
                  <td><%= notice.violation_date %></td>
                  <td><%= notice.created_at %></td>
                  <td><%= notice.response_required_date %></td>
                  <td><%= notice.response_received_date %></td>
                  <td>Status</td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div><!-- .animated -->
</div><!-- .content -->