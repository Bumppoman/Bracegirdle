<% content_for :title, 'Active Contractors' %>
<% content_for :breadcrumbs, breadcrumbs_helper(['Active contractors']) %>
<section
  id="board_applications-restorations-contractors-index"
  class="section-wrapper"
  data-action=
    "bracegirdle:board_applications:restorations:contractors:contractorCreated->board-applications--restorations--contractors--index#contractorCreated
    bracegirdle:board_applications:restorations:contractors:contractorUpdated->board-applications--restorations--contractors--index#contractorUpdated"
  data-controller="board-applications--restorations--contractors--index"
>
  <div 
    class="disappearing-success-message hidden"
    data-target="board-applications--restorations--contractors--index.successMessage"
  >
    <div class="alert alert-success"></div>
  </div>
  <div 
    data-controller="datatable"
    data-target="board-applications--restorations--contractors--index.contractorsDataTable"
  >
    <table
      id="board_applications-restorations-contractors-data-table"
      class="table display responsive no-wrap"
      data-empty-message="There are no contractors to display."
    >
      <thead>
        <tr>
          <th>Name</th>
          <th>County</th>
          <th>Address</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: 'contractor_row', collection: @contractors, as: :contractor %>
      </tbody>
    </table>
  </div>
  <div class="text-center">
    <button 
      type="button"
      class="btn btn-primary"
      data-action="board-applications--restorations--contractors--index#openNewContractorForm"
      >Add New Contractor</button>
  </div>
  <%= render partial: 'board_applications/restorations/contractors/form' %>
</section>