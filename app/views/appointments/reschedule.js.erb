document.getElementById('appointments-index').dispatchEvent(
  new CustomEvent('bracegirdle:appointments:appointmentRescheduled', 
    {
      detail: {
        appointmentId: '<%= @appointment.id %>',
        date: '<%= @appointment.begin.strftime("%B %-e, %Y %I:%M %p") %>',
        message: 'You have successfully rescheduled this <%= @appointment_name %>.'
      }
    }
  )
);