<%= form_with model: RetortModel.new,
  local: false,
  url: crematories_retort_models_path, 
  builder: BracegirdleFormBuilder do |f| 
%>
  <div 
    id="crematories-retort_models-form-modal" 
    class="modal fade"
    data-controller="crematories--retort-models--form"
  >
    <div class="modal-dialog modal-lg w-60" role="document">
      <div class="modal-content">
        <div class="modal-header px-4">
          <h6 
            class="tx-14 mb-0 tx-uppercase tx-inverse tx-bold"
            data-target="crematories--retort-models--form.title"
          >Add New Retort Model</h6>
          <button 
            class="close" 
            type="button" 
            aria-label="Close"
            data-action="crematories--retort-models--form#close"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body p-4">
          <div class="row">
            <div class="col">
              <%= f.select :manufacturer, 
                RetortModel::MANUFACTURERS.invert, 
                { prompt: 'Choose manufacturer', required: true } 
              %>
            </div>
            <div class="col">
              <%= f.text_field :name, required: true %>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <%= f.number_field :maximum_throughput, 
                label: 'Maximum Throughput', 
                required: true 
              %>
            </div>
          </div>
          <div class="modal-footer mt-4">
            <button 
              class="btn btn-primary"
              data-target="crematories--retort-models--form.submit"
            >Add New Retort Model</button>
            <button 
              type="button" 
              class="btn btn-secondary"
              data-action="crematories--retort-models--form#close"
            >Cancel</button>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
